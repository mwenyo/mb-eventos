/* tsconfig.json */
{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "node",
      "reflect-metadata"
    ],
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}